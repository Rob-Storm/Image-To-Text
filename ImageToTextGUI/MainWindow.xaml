<Window x:Class="ImageToTextGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageToTextGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="FilePathTextBox" HorizontalAlignment="Center" Margin="0,292,0,0" Text="" VerticalAlignment="Top" Width="350" TextWrapping="NoWrap" AcceptsReturn="False"/>
        <Image x:Name="ImageElement" HorizontalAlignment="Left" Height="128" Margin="340,119,0,0" VerticalAlignment="Top" Width="128">
            <Image.OpacityMask>
                <ImageBrush/>
            </Image.OpacityMask>
        </Image>
        <Button x:Name="EncodeButton" Content="Encode" HorizontalAlignment="Left" Margin="340,377,0,0" VerticalAlignment="Top" Click="EncodeButton_Click"/>
        <Button x:Name="DecodeButton" Content="Decode" HorizontalAlignment="Left" Margin="415,377,0,0" VerticalAlignment="Top" Click="DecodeButton_Click"/>
        <TextBox x:Name="OutputPathTextBox" HorizontalAlignment="Center" Margin="0,324,0,0" Text="" VerticalAlignment="Top" Width="350" TextWrapping="NoWrap" AcceptsReturn="False"/>
    </Grid>
</Window>
